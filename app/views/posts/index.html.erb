 <% @posts.each do |post| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Title: <%= post.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Topic: <%= post.topic %></h6>
    <p class="card-text">Content: <%= post.content %></p>
    <li><%= link_to "View Post", post %></li>

    <% @comments.reverse.each do |comment| %>
    <p class="card-text">Comment: <%= comment.content %></p>
    <% end %>

    
    <h6 class="card-subtitle mb-2 text-muted">Leave a comment.</h6>
    <%= bootstrap_form_for(@comment) do |f| %>
    <%= f.text_area :content %>
    <%= f.hidden_field(:post_id, value: "#{@post_id.id}") %>
    <%= f.hidden_field(:user_id, value: "#{@user.id}") %>
    <%= f.submit "Comment" %>
    <% end %>


  </div>
</div>
</div>
<% end %>



