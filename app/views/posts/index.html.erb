<div class="container">
 <div class="row col-12-sm justify-content-center" style="margin-bottom: 5rem;">
 <% @posts.reverse.each do |post| %>
    <div class="topiko-caro row">
    <div class="d-flex flex-wrap">
      <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
        <div class="card-body">
        <h4 class="card-title"><%= "#{@post.user.username}"%>
        <h6 class="card-subtitle mb-2 text-muted">Topic : <%= post.topic %></h6>
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.content %></p>
        <button class=" btn btn-outline-primary"><%= link_to "View Post", post %></button>
        </div>
    </div>
    </div>
    </div>
<% end %>
    <div class="next">
      <nav aria-label="...">
      <ul class="pagination">
        <li class="page-item disabled">
          <span class="page-link">Previous</span>
        </li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item active">
          <span class="page-link">
            2
            <span class="sr-only">(current)</span>
          </span>
        </li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
          <a class="page-link" href="#">Next</a>
        </li>
      </ul>
    </nav>
</div>
  