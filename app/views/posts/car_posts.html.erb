<div class="container">
<h1 class="header">Adulting on Cars <%= params[:cars] %></h1>

<div class="row col-12-sm" style="margin-bottom: 5rem;">
<% @posts.reverse.each do |post| %>
<div class="topiko-caro row">
<div class="d-flex flex-wrap">
<div class="card shift shadow-lg p-3 mb-5 bg-white rounded" style="width: 20rem;">
<div class="stroke">
 <img class="post-img card-img-top" src="<%= "#{@posts.post_pic}" %>" alt="Card image cap"> 
<div class="avatar text-center">
<img src="/assets/pic.png" alt="..." class="rounded-circle">
</div>
</div>
  <div class="card-body">
    <h4 class="card-title"><%= post.user.username %>
    <h5 class="card-title card-dark"> <%= post.title %></h5> 
    <p class="card-text"><%= post.content %></p>
    <a href="#" class="btn btn-primary">Read More</a>
  </div>
</div>
</div>
</div>
<% end %>

<div class="next">
  <nav aria-label="...">
  <ul class="pagination">
    <li class="page-item disabled">
      <span class="page-link">Previous</span>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item active">
      <span class="page-link">
        2
        <span class="sr-only">(current)</span>
      </span>
    </li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>
</div>
 


