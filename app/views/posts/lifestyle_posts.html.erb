<div class="container">
<h1 class="header">Adulting on Lifestyle</h1>

<div class="row col-12-sm" style="margin-bottom: 5rem;">
<% @posts.reverse.each do |post| %>
<div class="topiko-caro row">
<div class="d-flex flex-wrap">
<div class="card shift shadow-lg p-3 mb-5 bg-white rounded" style="width: 20rem;">
<div class="stroke">
<%= image_tag "#{post.post_pic}", class: "post-img card-img-top" %> 
<div class="avatar">
<%= image_tag "#{@user.picture}", class: "rounded-circle" %>
</div>
</div>
 <div class="card-body">
   <h4 class="card-title"><%= post.user.username %>
   <h5 class="card-title card-dark"> <%= post.title %></h5>
   <p class="card-text"><%= post.content %></p>
   <btn class="btn btn-outline-primary"> <%= link_to "Read More", post %></btn>
 </div>
</div>
</div>
</div>
<% end %>
