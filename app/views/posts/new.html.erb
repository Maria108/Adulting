<div class="new-post card">
<%= bootstrap_form_with(model: @post, local: true) do |f| %>

<%= f.text_field :title, label: "Title:" %>


<%= f.select :topic, ["Finance", "Housing", "Cars", "Travel", "Technology", "Lifestyle"], label: "Topic:" %>

<%= f.text_area :content, label: "Content:" %>
<%= f.hidden_field(:post_pic, value: "http://media.idownloadblog.com/wp-content/uploads/2013/08/Blue-Clean-iOS7_iPad00-Max-Kas.png") %>
<%= f.hidden_field(:user_id, value: "#{@user.id}") %>
<%= f.submit({:class=> 'btn btn-outline-primary'}) %>
<% end %>
</div>

